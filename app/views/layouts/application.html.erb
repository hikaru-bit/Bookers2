<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <a class="navbar-brand p-3" href="/"><span>Bookers</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
          <p class="text-white bg-dark"><%= flash[:notice] %></p>
           <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
                <i class="fas fa-home nav-link text-light">Home</i>
              <% end %>
            </li>
            <li>
            ã€€<a class="fas fa-users nav-link text-light" href="/users"> Users</a>
            </li>
            <li>
              <a class="fas fa-book-open nav-link text-light" href="/books"> Books</a>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                 <i class="fas fa-sign-out-alt nav-link text-light">logout</i>
              <% end %>
            </li>
            <% else %>
             <li>
            <a class="fas fa-home nav-link text-light" href="/"> Home</a>
            </li>
            <li>
             <a class="fas fa-link nav-link text-light" href="/home/about"> About</a>
            </li>
            <li>
             <a class="fas fa-user-plus nav-link text-light" href="/users/sign_up"> sign up</a>
            </li>
            <li>
              <a class="fas fa-sign-in-alt nav-link text-light" href="/users/sign_in"> login</a>
            </li>
            <% end %>
           </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
  	    <div class="row">
    	    <div class="mx-auto">
    	    	<p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>
  </body>
</html>
