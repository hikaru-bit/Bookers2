<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      <%= form_with model:@book, url:"/books/#{@book.id}", local: true do |f| %>
      <%= render "layouts/error_messages", book: @book %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
         <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book"><br>

        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", books_path %>

      <% end %>

   </div>
  </div>
</div>