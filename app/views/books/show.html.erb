<%= flash[:notice] %>

<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @book2.user, :profile_image, :fill, 60, 60, format:'jpg', fallback: "no_image.jpg" %>
  <h3>name</h3>
  <h3 class="name"><%= @book2.user.name %></h3>
  <h3>introduction</h3>
  <h3 class="introduction"><%= @book2.user.introduction %></h3>
</div>
<%= link_to "Edit", edit_user_path(current_user.id)  %>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<%= render "layouts/error_messages", book: @book %>
     <h4>title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_field :body %><br>
     <%= f.submit 'Create Book' %>
<% end %>

