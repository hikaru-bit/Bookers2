<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <div class="profile-container">
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpg', fallback: "no_image.jpg" %>
      <table class="table table-hover table-inverse">
        <thad>
          <tr>
          <th>name</th>
          <td><%= @user.name %></td>
          </tr>
        </thad>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </td>
      </table>
    </div>
  <%= link_to edit_user_path(@user) do %>
    <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
  <% end %>


    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <h4>Title</h4>
          <%= f.text_field :title, class: "col-xs-12 book_title" %>
       <h4>opinion</h4>
          <%= f.text_area :body, class: "col-xs-12 book_body" %>
     <br>
     <div class="form">
       <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
     </div>
    <% end %>
  </div>

    <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
           <% @books.each do |book| %>
           <tr>
             <td>
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpg', fallback: "no_image.jpg" %>
            <% end %>
            </td>
            <td>
            <%= link_to book_path(book.id) do %>
             <p><%= book.title %></p>
            <% end %>
            </td>
            <td><p><%= book.body %></p></td>
            </tr>
            <% end %>
    </tbody>
    </table>
    </div>

  </div>
</div>

