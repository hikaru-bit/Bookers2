<h1>User Info</h1>
<%= form_with model:@user, local: true do |f| %>
<%= render "layouts/error_messages2", user: @user %>
  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>

  <h4>Introduction</h4>
  <%= f.text_field :introduction %><br>
  <%= f.submit 'Update User' %><br>

<% end %>